<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <declare-styleable name="StatusBarHeightView">
        <attr name="use_type" format="integer">
            <enum name="use_height" value="0" />
            <enum name="use_padding_top" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CodeEditView">
        <attr name="borderSize" format="integer"/>
        <attr name="borderMargin" format="integer"/>
        <attr name="textSize" format="integer"/>
        <attr name="textColor" format="color"/>
        <attr name="borderNum" format="integer"/>
    </declare-styleable>
    <!--title_layout-->
    <style name="title_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120px</item>

    </style>
    <!--titlebar_left-->
    <style name="titlebar_left">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:paddingRight">20px</item>
        <item name="android:src">@mipmap/left_img</item>
    </style>

    <!--title_text-->
    <style name="title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/main_textcolorB</item>
        <item name="android:textSize">@dimen/titlebar_textsize</item>
    </style>
    <!--title_text-->
    <style name="title_keep_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingRight">60px</item>
        <item name="android:textColor">@color/main_textcolorB</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="CheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:maxHeight">12dp</item>
        <item name="android:maxWidth">12dp</item>
    </style>
    <!--时间选择器样式-->
    <style name="date_picker_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/date_picker_bg</item>
    </style>
</resources>